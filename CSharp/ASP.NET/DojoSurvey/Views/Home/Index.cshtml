@using DojoSurvey.Models
@model Survey
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dojo Survey Index</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body>
    <div class="container border mt-5 p-3">
        <form class="form" asp-action="Result" asp-controller="Home" method="POST">
            <div class="form-group">
                <span asp-validation-for="Name" class="text-danger"></span>
                <div class="row">
                    <div class="col-4"><label asp-for="Name"></label></div>
                    <div class="col-8"><input asp-for="Name"></div>
                </div>
            </div>
            <div class="form-group">
                <span asp-validation-for="Location" class="text-danger"></span>
                <div class="row">
                    <div class="col-4"><label asp-for="Location"></label></div>
                    <div class="col-8">
                        <select asp-for="Location">
                            <option value="Arlington">Arlington</option>
                            <option value="Bellevue">Bellevue</option>
                            <option value="Boise">Boise</option>
                            <option value="Chicago">Chicago</option>
                            <option value="Dallas">Dallas</option>
                            <option value="Los Angeles">Los Angeles</option>
                            <option value="Oakland">Oakland</option>
                            <option value="Orange County">Orange County</option>
                            <option value="San Jose">San Jose</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <span asp-validation-for="FavLang" class="text-danger"></span>
                <div class="row">
                    <div class="col-4"><label asp-for="FavLang"></label></div>
                    <div class="col-8">
                        <select asp-for="FavLang">
                            <option value="C#">C#</option>
                            <option value="Python">Python</option>
                            <option value="JavaScript">JavaScript</option>
                            <option value="HTML">HTML</option>
                            <option value="CSS">CSS</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <span asp-validation-for="Comment" class="text-danger"></span>
                <div class="row">
                    <div class="col-4"><label asp-for="Comment"></label></div>
                    <div class="col-8">
                        <textarea asp-for="Comment" rows="3"></textarea>
                    </div>
                </div>
            </div>
            <div class="text-right">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</body>
</html>