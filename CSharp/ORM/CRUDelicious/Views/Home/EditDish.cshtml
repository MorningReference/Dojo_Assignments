@model Dishes

<div class="text-center">
    <h1>Add a new Dish!</h1>
</div>
<div class="text-left">
    <a href="/">Home</a>
</div>
<form action="/update/@Model.DishId" method="POST">
    <div class="row">
        <div class="col-4">
            <div class="form-group">
                <span asp-validation-for="Chef"></span>
                <label asp-for="Chef"></label>
                <input class="form-control" asp-for="Chef" value="@Model.Chef">
            </div>
            <div class="form-group">
                <span asp-validation-for="Name"></span>
                <label asp-for="Name"></label>
                <input class="form-control" asp-for="Name" value="@Model.Name">
            </div>
            <div class="form-group">
                <span asp-validation-for="Calories"></span>
                <label asp-for="Calories"></label>
                <input class="form-control" asp-for="Calories" value="@Model.Calories">
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <span asp-validation-for="Tastiness"></span>
                <label asp-for="Tastiness"></label>
                <select class="form-control" asp-for="Tastiness">
                    @for(int i = 1; i <= 5; i++)
                    {
                        if(i == Model.Tastiness)
                        {
                            <option value="@i" selected>@i</option>
                        }
                        else
                        {
                            <option value="@i">@i</option>
                        }
                    }
                    @* <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option> *@
                </select>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <span asp-validation-for="Description"></span>
                <label asp-for="Description"></label>
                <textarea class="form-control" asp-for="Description" rows="6">@Model.Description</textarea>
            </div>
            <button type="submit" class="btn btn-primary">Edit Dish</button>
        </div>
    </div>
</form>