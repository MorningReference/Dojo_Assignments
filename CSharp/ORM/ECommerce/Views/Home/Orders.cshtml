@model OrdersViewModel

<div class="row">
    <form asp-controller="Home" asp-action="CreateOrder" method="POST" class="form col-6">
        <h1>Add a new order</h1>
        <div class="form-group row">
            <label asp-for="OrderToAdd.CustomerId"></label>
            <select asp-for="OrderToAdd.CustomerId" class="form-control">
                @foreach (Customer customer in Model.AllCustomers)
                {
                    <option value="@customer.CustomerId">@customer.Name</option>
                }
            </select>
        </div>
        <div class="form-group row">
            <label asp-for="OrderToAdd.ProductId"></label>
            <select asp-for="OrderToAdd.ProductId" class="form-control">
                @foreach (Product product in Model.AllProducts)
                {
                    <option value="@product.ProductId">@product.Name</option>
                }
            </select>
            <input asp-for="OrderToAdd.ProductQuantity">
        </div>
        <div class="text-right">
            <button type="submit" class="btn btn-primary">Order</button>
        </div>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Customer Name</th>
            <th scope="col">Product</th>
            <th scope="col">Quantity</th>
            <th scope="col">Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Order order in Model.AllOrders)
        {
            <tr>
                <td>@order.Buyer.Name</td>
                <td>@order.ItemBought.Name</td>
                <td>@order.ProductQuantity</td>
                <td>@order.CreatedAt</td>
            </tr>
        }
    </tbody>
</table>