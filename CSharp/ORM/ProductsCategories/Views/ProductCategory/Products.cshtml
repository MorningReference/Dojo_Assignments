@model Product
<div class="text-center">
    <h1>
        Products | <a href="/categories">Categories</a>
    </h1>
</div>

<div class="row">
    <div class="col-6">
        <h3>New Product</h3>
        <form class="form" asp-action="CreateProduct" asp-controller="ProductCategory" method="POST">
            <span class="text-danger" asp-validation-for="Name"></span>
            <div class="form-group row">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">
            </div>
            <span class="text-danger" asp-validation-for="Description"></span>
            <div class="form-group row">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>
            <span class="text-danger" asp-validation-for="Price"></span>
            <div class="form-group row">
                <label asp-for="Price"></label>
                <input type="number" asp-for="Price" class="form-control">
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
    <div class="col-6">
        <h3>Existing Products</h3>
        @foreach(Product product in ViewBag.AllProducts)
        {
            <p><a href="/product/@product.ProductId">@product.Name</a></p>
        }
    </div>
</div>