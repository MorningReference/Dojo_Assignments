@model Wedding

<div class="row">
    <h1 class="col-8">Plan Your Wedding</h1>
    <div class="col-4 row">
        <a href="/dashboard" class="col-6">Dashboard</a>
        <a href="/logout" class="col-6">Log Out</a>
    </div>
</div>
<div class="row">
    <form asp-action="CreateWedding" asp-controller="Wedding" method="POST" class="form col-6">
        <span asp-validation-for="WedderOne"></span>
        <div class="form-group row">
            <label asp-for="WedderOne" class="col-6"></label>
            <input asp-for="WedderOne" class="col-6 form-control">
        </div>
        <span asp-validation-for="WedderTwo"></span>
        <div class="form-group row">
            <label asp-for="WedderTwo" class="col-6"></label>
            <input asp-for="WedderTwo" class="col-6 form-control">
        </div>
        <span asp-validation-for="Date"></span>
        <div class="form-group row">
            <label asp-for="Date" class="col-6"></label>
            <input asp-for="Date" class="col-6 form-control">
        </div>
        <span asp-validation-for="Address"></span>
        <div class="form-group row">
            <label asp-for="Address" class="col-6"></label>
            <input asp-for="Address" class="col-6 form-control">
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>
</div>